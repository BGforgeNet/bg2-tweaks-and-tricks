INCLUDE ~%MOD_FOLDER%/lib/familiars.tph~ //familiar_list, compatibility with WTPfamiliars

ACTION_PHP_EACH familiar_list AS int => fam BEGIN
  ACTION_IF FILE_EXISTS_IN_GAME ~%prefix%%fam%.cre~ BEGIN
    COPY_EXISTING ~%prefix%%fam%.cre~ ~override~
      REPLACE_CRE_ITEM ~helm01~ #0 #0 #0 ~identified&unstealable&undroppable~ ~HELMET~
    BUT_ONLY
  END
END
