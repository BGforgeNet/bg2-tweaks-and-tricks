COPY_EXISTING_REGEXP GLOB ~^.+\.sto$~ ~override~
  PATCH_IF NOT (~%SOURCE_RES%~ STR_EQ ~stovai~) BEGIN // skip officer Vai's buyinh scalps
    READ_LONG STO_buy_price_markup buy_markup
