ACTION_FOR_EACH item IN
  clck03  //cloak of displacement
  clck33  //semaj's cloak
  misc72  //claw of kazgaroth
BEGIN
  ACTION_IF FILE_EXISTS_IN_GAME ~%item%.itm~ BEGIN
    COPY_EXISTING ~%item%.itm~ ~override~
      LPF DELETE_ITEM_EQEFFECT
        INT_VAR
          opcode_to_delete=65
      END
    BUT_ONLY
  END
END
